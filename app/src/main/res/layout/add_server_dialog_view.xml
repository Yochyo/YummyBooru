<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <Spinner
        android:id="@+id/server_template"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="-10dp" />

    <EditText
        android:id="@+id/add_server_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="@string/name"
        android:inputType="text"
        android:maxLines="1" />

    <Spinner
        android:id="@+id/add_server_api"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="-10dp" />

    <EditText
        android:id="@+id/add_server_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="@string/url_hint"
        android:inputType="text"
        android:maxLines="1" />

    <EditText
        android:id="@+id/add_server_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="@string/hint_username_or_email"
        android:inputType="text"
        android:maxLines="1" />

    <EditText
        android:id="@+id/add_server_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="@string/hint_password_or_api_key"
        android:inputType="text"
        android:maxLines="1" />

</LinearLayout>